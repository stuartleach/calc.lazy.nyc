<!-- app/views/calculator/index.html.erb -->
<div id="smaller-container">
  <%= turbo_frame_tag "calculator" do %>
    <%= form_tag("/calculate", method: :post, data: { turbo_action: 'replace', turbo_frame: 'calculator' }) do %>
      <div id="display"><%= @display %></div>
      <div id="keypad" >
        <% ['1', '2', '3', '+', '4', '5', '6', '-', '7', '8', '9', '*', 'C', '0', '/', '='].each do |button| %>
          <%= button_tag button, name: 'button', value: button, class: "keypad-button", data: { turbo_frame: "calculator" } %>
        <% end %>
      </div>
    <% end %> <!-- Close form_tag -->
  <% end %> <!-- Close turbo_frame_tag for "calculator" -->
</div>
<style>
  .keypad-button {
    width: 20%;
    height: 20%;
    font-size: 20px;
    padding: 20px;
    border: none;
    background-color: #eaeaea;
    cursor: pointer;
    font-family: monospace;
    transition: background-color 0.3s;
    border-radius: 5px;
  }


  #keypad {
    display: flex; flex-wrap: wrap; justify-content: center; gap: 10px; max-width: 300px; margin: auto;
  }

  .keypad-button:hover {
    background-color: #ccc;
  }

  #smaller-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-height: 100vh;
  }

  #result {
    width: 100%;
    text-align: center;
    height: 100px;
  }


  #display {
    width: 90%;
    margin: 0 auto;
    text-align: center;
    height: 50px;
    font-size: 2em;
    font-family: monospace;
    background-color: #eaeaea;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    margin-bottom: 20px;
  }
</style>
