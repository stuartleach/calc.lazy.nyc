<!-- app/views/calculator/index.html.erb -->
<div id="smaller-container">
  <%= turbo_frame_tag "calculator" do %>
    <%= form_tag("/calculate", method: :post, id: "calculator_form") do %>
      <div id="display"><%= @display %></div>
      <div id="keypad">
        <% ['1', '2', '3', '+', '4', '5', '6', '-', '7', '8', '9', '*', 'C', '0', '/', '='].each do |button| %>
          <%= button_tag button, type: 'button', name: 'button', value: button, class: "keypad-button" %>
        <% end %>
      </div>
    <% end %>
    <div id="elapsed"><%= @elapsed %></div>
  <% end %>
</div>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const displayElement = document.getElementById('display');
    document.querySelectorAll('.keypad-button').forEach(button => {
      button.addEventListener('click', (e) => {
        if (e.target.value === 'C') {
          displayElement.innerText = '0'; // Reset display
        } else if (e.target.value === '=') {
          // document.getElementById('calculator_form').submit(); // Submit form for calculation
          if (value === '=') {
  // Send POST request
  fetch('/calculate', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ operation, operator, operand }),
  })
  .then(response => {
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    return response.json();
  })
  .then(data => {
    document.getElementById('result').innerText = data.result;
    operation = '';
    operator = '';
    operand = '';
  })
  .catch(error => {
    console.error('There was a problem with the fetch operation: ', error);
  });
  }
        } else {
          const currentValue = displayElement.innerText === '0' ? '' : displayElement.innerText;
          displayElement.innerText = currentValue + e.target.value;
        }
      });
    });
  });
</script>
<style>
  .keypad-button {
    width: 20%;
    height: 20%;
    font-size: 20px;
    padding: 20px;
    border: none;
    background-color: #eaeaea;
    cursor: pointer;
    font-family: monospace;
    transition: background-color 0.3s;
    border-radius: 5px;
  }


  #keypad {
    display: flex; flex-wrap: wrap; justify-content: center; gap: 10px; max-width: 300px; margin: auto;
  }

  .keypad-button:hover {
    background-color: #ccc;
  }

  #smaller-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    max-height: 100vh;
  }

  #result {
    width: 100%;
    text-align: center;
    height: 100px;
  }

  #elapsed {
    width: 100%;
    text-align: center;
    height: 100px;
    color: black;
  }


  #display {
    width: 90%;
    margin: 0 auto;
    text-align: center;
    height: 50px;
    font-size: 2em;
    font-family: monospace;
    background-color: #eaeaea;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    margin-bottom: 20px;
  }
</style>
